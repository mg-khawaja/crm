    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <customcontrols:CustomImage Grid.Column="0"  Source="back.png" Aspect="AspectFit"
                       Margin="13" TintColor="{StaticResource DarkThemeColor}" HeightRequest="15" WidthRequest="15">
                    <customcontrols:CustomImage.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding BackCommand}"></TapGestureRecognizer>
                    </customcontrols:CustomImage.GestureRecognizers>
                </customcontrols:CustomImage>
                <Label   Grid.Column="2" Text ="{Binding PageTitle}" TextColor="{StaticResource DarkThemeColor}"
                         VerticalOptions="Center"  HorizontalOptions="Center"  
                         FontSize="12" FontFamily="{StaticResource Montserrat_Bold_Key}"/>
                <StackLayout Grid.Column="3" Orientation="Horizontal" Margin="20,0" HorizontalOptions="EndAndExpand">
                    <customcontrols:CustomImage   Source="add.png" Aspect="AspectFit" HeightRequest="12" WidthRequest="12"
                                                  TintColor="{StaticResource DarkThemeColor}" VerticalOptions="CenterAndExpand"/>
                    <Label  Text="{translator:Translate Add}" FontFamily="{StaticResource Montserrat_Bold_Key}"
                       TextColor="{StaticResource ThemeColor}" HorizontalOptions="Start"
                       VerticalOptions="CenterAndExpand" FontSize="12"/>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AddCommand}"/>
                    </StackLayout.GestureRecognizers>
                </StackLayout>
            </Grid>
            <Grid Grid.Row="1"  RowSpacing="0" BackgroundColor="{StaticResource MediumGrayColor}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <BoxView Grid.Row="0" VerticalOptions="Start" Color="Gray" 
                         HeightRequest="1" HorizontalOptions="FillAndExpand"></BoxView>

                <StackLayout  Grid.Row="1"  Orientation="Horizontal" Padding="15,0" BackgroundColor="#FAFAFA">
                    <customcontrols:CustomImage Source="search.png" VerticalOptions="CenterAndExpand" 
                                                Aspect="AspectFit" HeightRequest="30" WidthRequest="30"
                                                TintColor="{StaticResource DarkThemeColor}">
                        <customcontrols:CustomImage.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SearchCommand}"/>
                        </customcontrols:CustomImage.GestureRecognizers>
                    </customcontrols:CustomImage>
                    <customcontrols:CustomEntry Text="{Binding SearchText}" UnderlineColor="{StaticResource DarkThemeColor}" 
                                                TextColor="{StaticResource ThemeColor}" TextFontFamily="{StaticResource Montserrat_Regular_Key}"
                                                TextFontSize="15" HorizontalOptions="FillAndExpand" HeightRequest="45"
                                                Margin="10,1,10,10" Placeholder="Search" PlaceholderColor="Gray"
                                                PlaceholderFontFamily="{StaticResource Montserrat_Regular_Key}"
                                                BackgroundColor="#FAFAFA"/>
                    <Label Text="X" FontSize="25" FontFamily="{StaticResource Montserrat_Bold_Key}"
                           TextColor="{StaticResource DarkThemeColor}" HorizontalOptions="End"
                           WidthRequest="25" VerticalOptions="CenterAndExpand">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ClearTextCommand}"></TapGestureRecognizer>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>

                <BoxView Grid.Row="2" VerticalOptions="Start" Color="Gray" 
                         HeightRequest="1" HorizontalOptions="FillAndExpand"></BoxView>

                <Grid Grid.Row="2"  BackgroundColor="{StaticResource MediumGrayColor}" VerticalOptions="FillAndExpand">
                    <ScrollView VerticalOptions="FillAndExpand">
                        <StackLayout VerticalOptions="FillAndExpand" BackgroundColor="{StaticResource MediumGrayColor}">
                    <!--<ScrollView>
                        <StackLayout BackgroundColor="Blue">
                            <StackLayout BindableLayout.ItemsSource="{Binding FieldsList}" Margin="0,20,0,0" BackgroundColor="Transparent"
                            BindableLayout.ItemTemplateSelector="{StaticResource ListDataTemplateSelector}">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="ListView_ItemSelected"/>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                            --><!--<ListView  ItemsSource="{Binding FieldsList}" HasUnevenRows="True" Margin="0,20,0,0" BackgroundColor="Transparent"
                          SeparatorVisibility="None" ItemSelected="ListView_ItemSelected" ItemTemplate="{StaticResource ListDataTemplateSelector}"/>-->
                            <!--<StackLayout Orientation="Horizontal" Margin="10,5" HeightRequest="25" HorizontalOptions="CenterAndExpand" VerticalOptions="End">
                                <Label Text="Load more" HorizontalOptions="Center"
                                                       TextColor="{StaticResource ThemeColor}" FontSize="14"
                                                   FontFamily="{StaticResource Montserrat_Medium_Key}" VerticalTextAlignment="Center"></Label>
                            </StackLayout>--><!--
                        </StackLayout>
                    </ScrollView>-->
                    <StackLayout VerticalOptions="StartAndExpand" BackgroundColor="Transparent">
                        <StackLayout BindableLayout.ItemsSource="{Binding FieldsList}" Margin="0,10,0,0" BackgroundColor="Transparent"
                                 BindableLayout.ItemTemplateSelector="{StaticResource ListDataTemplateSelector}">
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ListView_ItemSelected"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </StackLayout>
                    
                    <!--<syncfusion:SfListView  ItemsSource="{Binding FieldsList}" Margin="0,20,0,0" BackgroundColor="Transparent"
                           ItemTapped="SfListView_ItemTapped" LoadMoreOption="None" IsBusy="{Binding IsFetching}" 
                             LoadMoreCommand="{Binding LoadMoreItemsCommand}" SelectionBackgroundColor="Transparent"
                               ItemTemplate="{StaticResource ListDataTemplateSelector}" ItemSize="{Binding ItemSize}"/>-->
                    <Button Text="{translator:Translate LoadMore}" HorizontalOptions="Center"
                       TextColor="{d:StaticResource ThemeColor}" FontSize="14"  IsVisible="{Binding IsLoadMoreVisible}"
                       FontFamily="{StaticResource Montserrat_Medium_Key}" Command="{Binding LoadMoreItemsCommand}"
                           VerticalOptions="End" Margin="0,0,0,10" BackgroundColor="Transparent"/>
                        </StackLayout>
                    </ScrollView>
                    <ActivityIndicator VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" IsRunning="True"
                                       IsVisible="{Binding IsFetching}"/>
                </Grid>
                
                <commonviews:BottomLayoutView Grid.Row="3" HeightRequest="50"></commonviews:BottomLayoutView>
            </Grid>
        </Grid>
    </ContentPage.Content>

</ContentPage>